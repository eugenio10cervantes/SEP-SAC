@model SEP_SAC.Models.Nivel

@{
    ViewBag.Title = "Nivel";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<!-- Bradcrumbs -->
<div class="container">
    <div class="row" style="margin-top: 15px;">
        <div class="col s12 breadcrumbs">
            <a href="/admin">Admin</a> > <a href="/Admin/Procedimientos/">Procedimientos</a> > <a href="~/Admin/Procedimiento/@Model.Procedimientos.id">Procedimiento @Model.Procedimientos.nombre</a> > @Model.nombre
        </div>
    </div>
</div>
<!-- Fin de bradcrumbs -->

<div class="container">
    <div class="row">
        <div class="s12 col center-align">
            <h1>@Model.nombre</h1>
        </div>
    </div>

    <div class="row">
        <div class="s12 col">

            <h2>Perfiles asociados</h2>

            <table>

                <thead>
                    <tr>
                        <td>Perfil</td>
                        <td>Acciones</td>
                    </tr>
                </thead>

                <tbody>

                    @foreach (var perfil in Model.Perfiles)
                    {
                        <tr>
                            <td>
                                <a href="~/Admin/Perfil/@perfil.id">@perfil.nombre</a>
                            </td>
                            <td class="acciones">
                                <a href="~/Admin/Perfil/@perfil.id">Ver detalle</a>
                                <a href="~/Admin/EditarPerfil/@perfil.id">Editar</a>
                                <a href="~/Admin/BorrarPerfil/@perfil.id">Borrar</a>
                            </td>
                        </tr>
                    }

                </tbody>

            </table>
        </div>
    </div>

    <div class="row">
        <div class="s12 col right-align">
            <a href="~/Admin/CrearPerfil/@Model.id" class="btn-floating btn-large waves-effect waves-light red" title="Agregar nivel"><i class="material-icons">add</i></a>
        </div>
    </div>

</div>