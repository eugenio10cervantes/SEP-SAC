@model SEP_SAC.Models.Perfil

@{
    ViewBag.Title = "Perfil";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<!-- Bradcrumbs -->
<div class="container">
    <div class="row" style="margin-top: 15px;">
        <div class="col s12 breadcrumbs">
            <a href="/admin">Admin</a> > <a href="/Admin/Procedimientos/">Procedimientos</a> > <a href="~/Admin/Procedimiento/@Model.Niveles.Procedimientos.id">Procedimiento @Model.Niveles.Procedimientos.nombre</a> > <a href="/Admin/Nivel/@Model.Niveles.id">@Model.Niveles.nombre</a> > <span>@Model.nombre</span>
        </div>
    </div>
</div>
<!-- Fin de bradcrumbs -->

<div class="container">
    <div class="row">
        <div class="s12 col center-align">
            <h1>@Model.nombre</h1>
        </div>
    </div>

    <div class="row">
        <div class="s12 col">

            <h2>Requerimientos</h2>

            <table>

                <thead>
                    <tr>
                        <td>Nombre del requerimiento</td>
                        <td>Acciones</td>
                    </tr>
                </thead>

                <tbody>

                    @foreach (var req in Model.Requerimientos)
                    {
                        <tr>
                            <td>
                                <span>@req.nombre</span>
                            </td>
                            <td class="acciones">
                                <a href="~/Admin/EditarRequerimiento/@req.id">Editar</a>
                                <a href="~/Admin/BorrarRequerimiento/@req.id">Borrar</a>
                            </td>
                        </tr>
                    }

                </tbody>

            </table>
        </div>
    </div>

    <div class="row">
        <div class="s12 col right-align">
            <a href="~/Admin/CrearRequerimiento/@Model.id" class="btn-floating btn-large waves-effect waves-light red" title="Agregar nivel"><i class="material-icons">add</i></a>
        </div>
    </div>

</div>