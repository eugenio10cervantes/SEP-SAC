@model SEP_SAC.Models.Procedimiento

@{
    ViewBag.Title = "EditarProcedimiento";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<!-- Bradcrumbs -->
<div class="container">
    <div class="row" style="margin-top: 15px;">
        <div class="col s12 breadcrumbs">
            <a href="/admin">Admin</a> > <a href="/Admin/Procedimientos/">Procedimientos</a> > <a href="/Admin/Procedimiento/@Model.id">Procedimiento @Model.nombre</a> > <span>Editar procedimiento</span>
        </div>
    </div>
</div>
<!-- Fin de bradcrumbs -->

<div class="container">

    <div class="row">
        <div class="s12 col center-align">
            <h2>Editar Procedimiento</h2>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "row text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="row">
            <div class="s12 col input-field">
                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(model => model.creacion)
        @Html.HiddenFor(model => model.modificacion)

        <div class="row">
            <div class="s12 col center-align">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Ver procedimientos", "Procedimientos")
    </div>

</div>