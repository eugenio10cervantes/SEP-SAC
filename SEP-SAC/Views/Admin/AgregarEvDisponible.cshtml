@model SEP_SAC.Models.Requerimiento

@{
    ViewBag.Title = "AgregarEvDisponible";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<!-- Bradcrumbs -->
<div class="container">
    <div class="row" style="margin-top: 15px;">
        <div class="col s12 breadcrumbs">
            <a href="/admin">Admin</a> > <a href="/Admin/Procedimientos/">Procedimientos</a> > <a href="~/Admin/Procedimiento/@ViewBag.id_procedimiento">Procedimiento @ViewBag.nombre_procedimiento</a> > <a href="/Admin/Nivel/@ViewBag.nivel_id">@ViewBag.nombre_nivel</a> > <a href="/Admin/Perfil/@ViewBag.id">@ViewBag.nombre_perfil</a> > <span>Habilitar Evaluador</span>
        </div>
    </div>
</div>
<!-- Fin de bradcrumbs -->

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <input type="hidden" name="perfil_id" id="perfil_id" value="@ViewBag.id" />

    <div class="container">

        <div class="row">
            <div class="s12 col center-align">
                <h1>Habilitar Evaluador</h1>
            </div>
        </div>

        <div class="row">
            <div class="s12 col input-field">
                @Html.DropDownList("evaluador_id", null, "Instancia evaluadora", htmlAttributes: new { })
            </div>
        </div>

        <div class="row">
            <div class="s12 col">
                <input type="submit" value="Habilitar" class="btn btn-default" />
            </div>
        </div>

    </div>
}

@section Scripts{
    
    <script type="text/javascript">

        $(document).ready(function () {
            $('select').material_select();
        });
    </script>    
}